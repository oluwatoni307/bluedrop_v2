import 'package:flutter/material.dart';
import '../../data/challenge_model.dart';

class ActiveChallengeRow extends StatelessWidget {
  final Challenge challenge;
  final int currentWaterLog; // Still needed to show the text "1500/3000ml"
  final VoidCallback? onToggleHabit;

  const ActiveChallengeRow({
    super.key,
    required this.challenge,
    required this.currentWaterLog,
    this.onToggleHabit,
  });

  @override
  Widget build(BuildContext context) {
    // 1. Progress is now PURELY Time-Based
    final timeProgress = challenge.getTimelineProgress();
    
    final isWater = challenge.type == ChallengeType.waterMain;
    final primaryColor = isWater ? Colors.blue : Colors.purple;
    final backgroundColor = isWater ? Colors.blue.shade50 : Colors.purple.shade50;

    // Calculate days remaining text
    final daysLeft = challenge.durationDays - (DateTime.now().difference(challenge.startDate!).inDays);

    return Container(
      margin: const EdgeInsets.only(bottom: 12, left: 16, right: 16),
      height: 75,
      decoration: BoxDecoration(
        color: Colors.white,
        borderRadius: BorderRadius.circular(12),
        border: Border.all(color: Colors.grey.shade200),
        boxShadow: [
           BoxShadow(color: Colors.grey.shade100, blurRadius: 4, offset: const Offset(0, 2))
        ],
      ),
      child: ClipRRect(
        borderRadius: BorderRadius.circular(12),
        child: Stack(
          children: [
            // LAYER 1: The Liquid Background (Represents TIME ELAPSED)
            FractionallySizedBox(
              widthFactor: timeProgress, 
              child: Container(color: backgroundColor),
            ),
            
            // LAYER 2: The Content
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 16.0),
              child: Row(
                children: [
                  // Icon
                  Icon(isWater ? Icons.water_drop : Icons.bolt, color: primaryColor),
                  const SizedBox(width: 12),
                  
                  // Text Info
                  Expanded(
                    child: Column(
                      mainAxisAlignment: MainAxisAlignment.center,
                      crossAxisAlignment: CrossAxisAlignment.start,
                      children: [
                        Text(
                          challenge.title,
                          style: const TextStyle(fontWeight: FontWeight.bold),
                          overflow: TextOverflow.ellipsis,
                        ),
                        // Subtext changes based on type
                        Text(
                          isWater 
                             ? "${currentWaterLog}ml / ${challenge.targetVolume}ml" // Show Volume stats
                             : "$daysLeft days left", // Show Time stats
                          style: TextStyle(fontSize: 12, color: Colors.grey.shade700),
                        ),
                      ],
                    ),
                  ),

                  // RIGHT SIDE ACTIONS
                  if (isWater)
                    // Visual Indicator for Water Goal Status
                    Icon(
                      currentWaterLog >= challenge.targetVolume ? Icons.check_circle : Icons.circle_outlined,
                      color: currentWaterLog >= challenge.targetVolume ? Colors.green : Colors.grey.shade300,
                    )
                  else
                    // Toggle Button for Habits
                    GestureDetector(
                      onTap: onToggleHabit,
                      child: AnimatedContainer(
                        duration: const Duration(milliseconds: 200),
                        padding: const EdgeInsets.all(8),
                        decoration: BoxDecoration(
                          color: challenge.isHabitDoneToday ? primaryColor : Colors.grey.shade200,
                          shape: BoxShape.circle,
                        ),
                        child: Icon(
                          Icons.check,
                          color: challenge.isHabitDoneToday ? Colors.white : Colors.grey,
                          size: 20,
                        ),
                      ),
                    ),
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}